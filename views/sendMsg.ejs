  <script id="msg-handler">
    function put_msg_body(msg){

      document.getElementById("msg").value = msg;
      bytesHandler(document.getElementById("msg"))
    }

    function resetMsg(){
      document.getElementById("msg").value = "";
      $('span.bytes').text(0 + "/90bytes");
    }

    function showCollection(){
      var showCollection = document.getElementById("showCollection").innerHTML;

      if(showCollection == "문자모음 보기"){
        document.getElementById("showCollection").innerHTML = "문자모음 숨기기"
        $('#card-table').css("display","");
        setFirst(document.getElementById("firstNav"));
      }else{
        document.getElementById("showCollection").innerHTML = "문자모음 보기"
        $('#card-table').css("display","none");
      }
      
    }

    function showUserMsg(){
      document.getElementById("showCollection").innerHTML = "문자모음 숨기기"
        $('#card-table').css("display","");
        setFirst(document.getElementById("userNav"));
    }

  </script>

  <script id="phonenumList">

