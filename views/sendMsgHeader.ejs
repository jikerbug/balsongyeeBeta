    function readExcel() {
      
      let input = event.target;
      let reader = new FileReader();
      reader.onload = function () {
          let data = reader.result;
          let workBook = XLSX.read(data, { type: 'binary' });
          var excelGroup = new Array();
          workBook.SheetNames.forEach(function (sheetName) {
              console.log('SheetName: ' + sheetName);
              let rows = XLSX.utils.sheet_to_json(workBook.Sheets[sheetName], {header:['이름','전화번호']});
              let jsonRows = JSON.stringify(rows);
              let keyheader = Object.keys(rows[0]);
              console.log(keyheader);
              var columnNum = keyheader.length;
              if(columnNum != 2){
                alert("이름과 전화번호만을 포함한 파일을 업로드해주세요")
                return;
              }
              var count = rows.length;
              var validCnt = 0;

              var headerIncludeData = false;
              var phonenumPosition;

              for(var i=0; i<columnNum;i++ ){
                console.log(keyheader[i]);
                if(Number.isInteger(parseInt(keyheader[i]))){
                  headerIncludeData = true;
                  phonenumPosition = i;
                  count++;
      
                  
                  if(keyheader[i].charAt(0) == '1' && keyheader[i].length == 10){
                    validCnt++;
                    console.log("validCnt");
                    excelGroup.push(keyheader);
                  }
                }
              }
         
              if(!headerIncludeData){
                for(var i=0; i<columnNum;i++ ){
                  let values = Object.values(rows[0]);
        
                  if(Number.isInteger(parseInt(values[i]))){
                    
                    phonenumPosition = i
                  }
                }
                if(phonenumPosition == undefined){
                  alert("시작줄 혹은 두번째줄에 전화번호가 포함되어야 합니다")
                  return;
                }
                for(var i=0;i<count;i++){
                  let values = Object.values(rows[i]);
                  if(Number.isInteger(parseInt(values[phonenumPosition]))){
                      validCnt++;
                      excelGroup.push(values);
                  }
                }
              }else{
                console.log("test")
                if(phonenumPosition == undefined){
                  alert("시작줄 혹은 두번째줄에 전화번호가 포함되어야 합니다")
                  return;
                }
                console.log("test")

                for(var i=0;i<count-1;i++){
                  let values = Object.values(rows[i]);
                  if(Number.isInteger(parseInt(values[phonenumPosition]))){
                      validCnt++;
                      excelGroup.push(values);
                  }
                }
              }
              
              console.log(rows)
              sendInfo.push(excelGroup);
            
              alert("전체: " + count + "건\n잘못된 번호: "+ (count - validCnt) + "건\n발송가능한 번호: " + validCnt+"건");

              var info = "엑셀파일" + validCnt + "명";
              $('#phonenumList').append('<option id=' +id_key+ ' value="'+ info +'">'+ info +'</option>');
              id_key++;
              

              console.log(sendInfo);
           
              
          })
          
      };
      reader.readAsBinaryString(input.files[0]);
  }


